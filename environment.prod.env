# Configurações de Produção para Gerador de Métricas GitLab

# Django Settings
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-SECRET-KEY-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1

# Database Configuration (SQLite)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=/app/data/db.sqlite3

# GitLab API Configuration
GITLAB_API_URL=https://git.economia.gov.br/
GITLAB_SSL_VERIFY=False
GITLAB_TOKEN=YOUR-GITLAB-TOKEN-HERE

# Security Settings (Produção)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# CORS Settings (Produção)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=True

# Cache Settings
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=gitlab-metrics-cache
CACHE_TIMEOUT=3600
CACHE_MAX_ENTRIES=1000

# Session Settings
SESSION_ENGINE=django.contrib.sessions.backends.cached_db
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
STATICFILES_STORAGE=whitenoise.storage.CompressedManifestStaticFilesStorage

# Logging (Produção)
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Gunicorn Settings (Produção)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# Application Settings
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo
USE_I18N=True
USE_TZ=True

# REST Framework
REST_FRAMEWORK_PAGE_SIZE=20
REST_FRAMEWORK_DEFAULT_AUTHENTICATION=rest_framework.authentication.SessionAuthentication
REST_FRAMEWORK_DEFAULT_PERMISSION=rest_framework.permissions.IsAuthenticated

# Email Settings (se necessário)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Admin Settings
ADMIN_URL=admin/
ADMIN_EMAIL=admin@your-domain.com
